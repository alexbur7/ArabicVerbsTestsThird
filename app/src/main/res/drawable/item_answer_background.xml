<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorItemAnsPressed"></solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="1dp" android:color="@color/colorDarkBlue"></stroke>
        </shape>
    </item>

    <item android:state_window_focused="true">
        <shape>
            <solid android:color="@color/colorItemAnsNotPressed"></solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="1dp" android:color="@color/colorDarkBlue"></stroke>
        </shape>
    </item>

</selector>